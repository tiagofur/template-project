# ===============================================
# Serverless Application - Environment Variables
# ===============================================

# ===============================================
# AWS CONFIGURATION
# ===============================================
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# ===============================================
# STAGE/ENVIRONMENT
# ===============================================
STAGE=dev
SERVICE_NAME=serverless-app

# ===============================================
# DYNAMODB TABLES
# ===============================================
USERS_TABLE=${SERVICE_NAME}-users-${STAGE}
PRODUCTS_TABLE=${SERVICE_NAME}-products-${STAGE}
ORDERS_TABLE=${SERVICE_NAME}-orders-${STAGE}
LOGS_TABLE=${SERVICE_NAME}-logs-${STAGE}
CONNECTIONS_TABLE=${SERVICE_NAME}-connections-${STAGE}

# ===============================================
# S3 BUCKETS
# ===============================================
FILES_BUCKET=${SERVICE_NAME}-files-${STAGE}

# ===============================================
# SQS QUEUES
# ===============================================
ORDERS_QUEUE=${SERVICE_NAME}-orders-${STAGE}
NOTIFICATIONS_QUEUE=${SERVICE_NAME}-notifications-${STAGE}

# ===============================================
# AUTHENTICATION
# ===============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Cognito
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=your-client-id

# ===============================================
# EXTERNAL SERVICES
# ===============================================

# Stripe
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# SendGrid
SENDGRID_API_KEY=SG.xxxxxxxxxxxxx
FROM_EMAIL=noreply@yourdomain.com

# ===============================================
# API GATEWAY
# ===============================================
API_GATEWAY_URL=https://xxxxxx.execute-api.us-east-1.amazonaws.com

# ===============================================
# CORS
# ===============================================
CORS_ORIGIN=*

# ===============================================
# LOGGING & MONITORING
# ===============================================
LOG_LEVEL=debug

# Sentry
SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxx

# ===============================================
# FIREBASE (Optional)
# ===============================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=your-private-key
